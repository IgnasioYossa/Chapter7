<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        .add-user-row {
            display: flex;
            align-items: center;
        }
        .add-user-cell {
            padding: 0;
            border: none;
        }
        .add-user-button {
            padding: 0.375rem 0.75rem;
            text-align: left;
        }
    </style>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Username</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% userDataAll.forEach((user, index) => { %>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= user.username %></td>
                    <td>
                        <a href="" button type="button" class="btn btn-secondary">Details</a>
                    </td>
                    <td>
                        <a href="/usergame/userlist/update/<%= user.id %>" button type="button" class="btn btn-primary">Update</a>
                    </td>
                    <td>
                        <form action="/usergame/userlist/delete/<%= user.id %>" method="POST">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">
                                <img src="/images/trashcan.svg" style="filter: brightness(1.6);">
                            </button>
                        </form>
                    </td>
                </tr>
            <% }) %>
            <tr>
                <td colspan="5" class="add-user-cell">
                    <div class="add-user-row">
                        <a href="/usergame/userlist/add" class="btn btn-success add-user-button">Add New User</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
